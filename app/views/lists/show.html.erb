<div class="position-relative">
  <div class="card-category card-large py-5 shadow-lg rounded text-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
  url('<%= cl_image_path(@list.photo.key) %>')">
    <h1> <%= @list.name.capitalize %> </h1>
  </div>

  <br>
  <p> <%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn btn-success'  %> </p>
  <br>

  <% @bookmarks.each do |bookmark| %>
    <div class="bg-gray-100 flex-row justify-center items-center col-8 align-items-center">
      <div class="mb-3 p-6 bg-white rounded-xl shadow-xl hover:shadow-2xl hover:scale-105 transition-all transform duration-500">
        <img class="object-cover rounded-t-md img-fluid" src="<%=bookmark.movie.poster_url%>" alt="" />
        <div class="mt-4">
          <div class="mx-4">
            <h2 class="text-2xl font-bold text-gray-700"><%= bookmark.movie.title %> - <%= bookmark.movie.rating %>/10 </h2>
          </div>
          <p class="mx-4 text-sm mt-2 text-gray-700"><%= bookmark.movie.overview %></p>
          <div class="mx-4 pb-2 pl-4 pr-2 d-flex justify-content-between align-items-center">
            <span> "<%= bookmark.comment.capitalize %>" </span>
            <p class="btn text-bg-danger bg-opacity-75 text-light">
            <%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'text-decoration-none text-light'  %>
            </p>

          </div>
        </div>
      </div>
    </div>
  <% end %>
  <br>
  <p> <%= link_to 'Back to lists', lists_path, class: 'btn btn-primary' %> </p>
</div>
